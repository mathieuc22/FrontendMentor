---
export interface Props {
  number: string;
  illustration: string;
  title: string;
  subtitle: string;
}

const { number, illustration, title, subtitle } = Astro.props;
---

<div class="card">
  <div class="card__illustration">
    <img src={illustration} alt="Article illustration" />
  </div>
  <div class=".card__content">
    <div class="card__number">{number}</div>
    <div class="card__title">{title}</div>
    <div class="card__subtitle">{subtitle}</div>
  </div>
</div>

<style scoped>
  @media screen and (min-width: 1024px) {
    .card {
      flex: 1;
      display: flex;
      max-height: 130px;
    }
    img {
      max-height: 100%;
    }
    .card__number {
      font-size: 2rem;
      font-weight: 700;
      line-height: normal;
      color: var(--text-color-alt);
    }
    .card__title {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--heading-color);
    }
  }
</style>
